{
  "name": "doublethreedigital/minify",
  "description": "Minify CSS & JS assets on the fly.",
  "autoload": {
    "psr-4": {
      "DoubleThreeDigital\\Minify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DoubleThreeDigital\\Minify\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Duncan McClean"
    }
  ],
  "support": {
    "email": "addons@doublethree.digital"
  },
  "extra": {
    "statamic": {
      "name": "Minify",
      "description": "Minify CSS & JS assets on the fly."
    },
    "laravel": {
      "providers": [
        "DoubleThreeDigital\\Minify\\ServiceProvider"
      ]
    }
  },
  "require": {
    "matthiasmullie/minify": "^1.3",
    "statamic/cms": "3.0.*@beta"
  },
  "scripts": {
    "lint": [
      "php-cs-fixer fix ./src"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "orchestra/testbench": "^4.4"
  },
  "minimum-stability": "dev"
}
